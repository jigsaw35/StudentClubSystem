@model StudentClubSystem.Models.User
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Kayıt Ol</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h3 class="text-center mb-4">Kayıt Ol</h3>

                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger">@ViewBag.Error</div>
                        }

                        <form asp-action="Register" method="post">
                            <div class="mb-3">
                                <label>Ad Soyad</label>
                                <input asp-for="AdSoyad" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label>Email</label>
                                <input asp-for="Email" type="email" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label>Şifre</label>
                                <input asp-for="Sifre" type="password" class="form-control" required />
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
                        </form>
                        <div class="mt-3 text-center">
                            <a asp-action="Login">Zaten hesabın var mı? Giriş Yap</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>