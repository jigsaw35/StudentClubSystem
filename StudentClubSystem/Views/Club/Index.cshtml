@model IEnumerable<StudentClubSystem.Models.Club>

@{
    ViewData["Title"] = "Kulüpler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Kulüp Listesi</h2>
        <a asp-action="Create" class="btn btn-primary">+ Yeni Kulüp Ekle</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Kulüp Adı</th>
                <th>Açıklama</th>
                <th>Kuruluş Tarihi</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var club in Model)
            {
                <tr>
                    <td>@club.Ad</td>
                    <td>@club.Aciklama</td>
                    <td>@club.KurulusTarihi.ToShortDateString()</td>
                    <td>
                        @if (club.AktifMi)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Pasif</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@club.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@club.Id" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>